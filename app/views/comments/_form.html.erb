<p class="is_size-4">レビュー</p>

<div class="rating-box">
  <%= form_with(model:[list, comment], method: :post) do |f| %>
  <div class="main-rating">
    <div class="ratings mb-3">
      <span class="fa fa-regular fa-star" id="star"></span>
      <span class="fa fa-regular fa-star" id="star"></span>
      <span class="fa fa-regular fa-star" id="star"></span>
      <span class="fa fa-regular fa-star" id="star"></span>
      <span class="fa fa-regular fa-star" id="star"></span>
    </div>
    <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>
  </div>
    <%= f.text_area :comment %>
    <%= f.hidden_field :list_id, value: list.id %>
    <%#= f.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
    <%= f.hidden_field :rate, id: "rating-value" %>
    <%= f.submit 'コメントする' %>
<% end %>
</div>

<%#= javascript_include_tag 'reviews.js' %>